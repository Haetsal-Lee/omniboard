{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jasmine/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jasmine": true,
    "jest": true
  },
  "plugins": [
    "react",
    "jasmine",
    "jest"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "jasmine/no-spec-dupes": [1, "branch"]
  },
  "globals": {
    "shallow": false,
    "mount": false,
    "tick": false,
    "render": false
  }
}
